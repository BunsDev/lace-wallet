{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["/*"],
      "@ui/*": ["ui/*"]
    },
    "declarationDir": "./",
    "declaration": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "exclude": ["dist"]
}
